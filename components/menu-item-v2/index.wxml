<!--components/menu-item-v2/index.wxml-->
<view class="item">
  <view class="left">
    <image class="image" src="{{item.coverImgUrl || item.picUrl}}" mode="aspectFill"></image>
  </view>
  <view class="right">
    <view class="name">{{item.name}}</view>
    <view class="desc" wx:if="{{item.description || item.desc}}">{{item.description || item.desc}}</view>
  </view>
</view>
