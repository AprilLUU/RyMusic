/* components/ranking-area-item/index.wxss */
.item {
  height: 220rpx;
  display: flex;
  justify-content: space-between;
  background-color: #eee;
  border-radius: 12rpx;
  overflow: hidden;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.content {
  width: 400rpx;
  padding: 24rpx;
}

.content-title {
  font-size: 34rpx;
}

.content-list {
  margin-top: 20rpx;
  font-size: 24rpx;
}

.content-list-item {
  color: #333;
  margin-top: 6rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.content-list-item-author{
  color: #999;
}

.content-list-item-line {
  margin: 0 10rpx;
}

.album {
  position: relative;
  display: flex;
}

.album .image {
  width: 220rpx;
  height: 220rpx;
  background-size: cover;
}

.album .play-counter {
  position: absolute;
  right: 0;
  bottom: 0rpx;
  color: #fff;
  font-size: 22rpx;
  border-radius: 12rpx;
  padding: 6rpx 10rpx;
  background: rgba(0,0,0,.5);
}